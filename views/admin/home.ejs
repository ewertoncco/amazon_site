<!-- Wappler include head-page="layouts/adm" fontawesome_5="cdn" bootstrap5="custom" is="dmx-app" id="home" appConnect="local" components="{dmxCharts:{}}" -->

<meta name="ac:route" content="/admin/home">
<div class="page-heading">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0">Dashboard</h3>
        <div>
        </div>
    </div>

    <div class="row mb-2">
        <!-- Receita Total -->
        <div class="col-12 col-md-6 col-lg-3 ">
            <div class="card h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="stats-icon rounded-circle bg-primary-light me-3">
                            <i class="fas fa-dollar-sign text-primary"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-1">Total Vendas</h6>
                            <h3 class="fw-bold mb-0">{{dados.data.estatistica.qtide_vendas}}</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Novos Pedidos -->
        <div class="col-12 col-md-6 col-lg-3 ">
            <div class="card h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="stats-icon rounded-circle bg-info-light me-3">
                            <i class="fas fa-shopping-cart text-info"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-1">Vendas</h6>
                            <h3 class="fw-bold mb-0">722</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sessões -->
        <div class="col-12 col-md-6 col-lg-3 ">
            <div class="card h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="stats-icon rounded-circle bg-warning-light me-3">
                            <i class="fas fa-users text-warning"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-1">Usuários</h6>
                            <h3 class="fw-bold mb-0">181</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Valor Médio do Pedido -->
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="stats-icon rounded-circle bg-success-light me-3">
                            <i class="fas fa-chart-line text-success"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-1">Valor Médio</h6>
                            <h3 class="fw-bold mb-0">R$ 1025,50</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Gráfico Visão Geral de Audiência -->
        <div class="col-12 col-lg-8 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Últimas Vendas</h5>
                    <div class="dropdown">
                        <ul class="dropdown-menu" aria-labelledby="yearDropdown">
                            <li><a class="dropdown-item" href="#">Este Ano</a></li>
                            <li><a class="dropdown-item" href="#">Ano Passado</a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-sm">
                            <thead>
                                <tr>
                                    <th>Produto</th>
                                    <th>Preço</th>
                                    <th>Data</th>
                                    <th>Form Pag</th>
                                    <th>Ação</th>
                                </tr>
                            </thead>
                            <tbody is="dmx-repeat" id="ultimas_vendas" dmx-bind:repeat="dados.data.grafico.ultimas_vendas">
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div>
                                                <span class="fw-medium">{{nome}}</span>
                                                <br>
                                                <small class="text-muted">{{nome_participante}}</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>{{valor}}</td>
                                    <td>{{criado_em.formatDate('dd/MM/yy HH:mm')}}</td>
                                    <td>
                                        <span class="badge bg-primary">{{forma_pagamento}}</span>
                                    </td>
                                    <td>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Gráfico Renda Média Mensal -->
        <div class="col-12 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Vendas ( Forma Pagamento )</h5>
                    <div class="dropdown">
                        <ul class="dropdown-menu" aria-labelledby="monthDropdown">
                            <li><a class="dropdown-item" href="#">Este Mês</a></li>
                            <li><a class="dropdown-item" href="#">Mês Passado</a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    <div class="monthly-income-chart">
                        <div class="d-flex justify-content-center">
                            <dmx-chart id="chart1" point-size="" type="pie" dataset-1:value="quantidade" dmx-bind:data="dados.data.grafico.total_vendas" dataset-1:tooltip="forma_pag" thickness="0" colors="colors2" width="100%" legend="bottom" labels="forma_pag" responsive="true"></dmx-chart>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Tabela de Produtos Populares -->
        <div class="col-12 col-lg-8 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Mais vendidos</h5>
                    <div class="dropdown">
                        <button class="btn btn-sm dropdown-toggle" type="button" id="productYearDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            Este Ano
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="productYearDropdown">
                            <li><a class="dropdown-item" href="#">Este Ano</a></li>
                            <li><a class="dropdown-item" href="#">Ano Passado</a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Produto</th>
                                    <th>Preço</th>
                                    <th>Vendas</th>
                                    <th>Status</th>
                                    <th>Ação</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="product-img me-3 bg-light rounded p-2">
                                                <img src="/assets/images/icons/package-box.png" alt="Produto" width="32" height="32">
                                            </div>
                                            <div>
                                                <span class="fw-medium">Livro de História</span>
                                                <br>
                                                <small class="text-muted">ID: A3562</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>$50 <small class="text-muted">($70)</small></td>
                                    <td>450 <small class="text-muted">(550)</small></td>
                                    <td><span class="badge bg-primary">Em Estoque</span></td>
                                    <td>
                                        <div class="d-flex">
                                            <a href="#" class="btn btn-sm btn-icon me-2"><i class="fas fa-pen text-primary"></i></a>
                                            <a href="#" class="btn btn-sm btn-icon"><i class="fas fa-trash text-danger"></i></a>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="product-img me-3 bg-light rounded p-2">
                                                <img src="/assets/images/icons/package-box.png" alt="Produto" width="32" height="32">
                                            </div>
                                            <div>
                                                <span class="fw-medium">Vasos Coloridos</span>
                                                <br>
                                                <small class="text-muted">ID: A5002</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>$99 <small class="text-muted">($149)</small></td>
                                    <td>750 <small class="text-muted">(00)</small></td>
                                    <td><span class="badge bg-danger">Fora de Estoque</span></td>
                                    <td>
                                        <div class="d-flex">
                                            <a href="#" class="btn btn-sm btn-icon me-2"><i class="fas fa-pen text-primary"></i></a>
                                            <a href="#" class="btn btn-sm btn-icon"><i class="fas fa-trash text-danger"></i></a>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="product-img me-3 bg-light rounded p-2">
                                                <img src="/assets/images/icons/package-box.png" alt="Produto" width="32" height="32">
                                            </div>
                                            <div>
                                                <span class="fw-medium">Pulseira de Pérola</span>
                                                <br>
                                                <small class="text-muted">ID: A6598</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>$199 <small class="text-muted">($299)</small></td>
                                    <td>280 <small class="text-muted">(220)</small></td>
                                    <td><span class="badge bg-primary">Em Estoque</span></td>
                                    <td>
                                        <div class="d-flex">
                                            <a href="#" class="btn btn-sm btn-icon me-2"><i class="fas fa-pen text-primary"></i></a>
                                            <a href="#" class="btn btn-sm btn-icon"><i class="fas fa-trash text-danger"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Clientes -->
        <div class="col-12 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Clientes</h5>
                    <div>
                        <span class="badge bg-light text-dark">+6</span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-center mb-4">
                        <div class="donut-chart" style="width:200px; height:200px;">
                            <!-- Simulação de gráfico donut com CSS -->
                            <div class="position-relative" style="width:100%; height:100%;">
                                <div class="rounded-circle position-absolute" style="width:100%; height:100%; border:30px solid #ffc107; clip-path: polygon(0 0, 100% 0, 100% 50%, 0 50%);"></div>
                                <div class="rounded-circle position-absolute" style="width:100%; height:100%; border:30px solid #198754; clip-path: polygon(100% 0, 100% 100%, 50% 100%, 50% 0);"></div>
                                <div class="rounded-circle position-absolute" style="width:100%; height:100%; border:30px solid #0dcaf0; clip-path: polygon(0 50%, 50% 50%, 50% 100%, 0 100%);"></div>
                                <div class="rounded-circle position-absolute" style="width:100%; height:100%; border:30px solid #dc3545; clip-path: polygon(50% 50%, 100% 50%, 100% 100%, 50% 100%);"></div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center">
                        <div class="customer-profile-images">
                            <img src="/assets/images/users/avatar-1.jpg" class="rounded-circle" width="40" height="40" alt="Avatar">
                            <img src="/assets/images/users/avatar-2.jpg" class="rounded-circle" width="40" height="40" alt="Avatar">
                            <img src="/assets/images/users/avatar-3.jpg" class="rounded-circle" width="40" height="40" alt="Avatar">
                            <img src="/assets/images/users/avatar-4.jpg" class="rounded-circle" width="40" height="40" alt="Avatar">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

