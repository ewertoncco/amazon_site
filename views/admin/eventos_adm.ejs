<!-- Wappler include head-page="layouts/layoutadm" fontawesome_5="cdn" bootstrap5="custom" is="dmx-app" id="eventos_adm" appConnect="local" components="{dmxBootstrap5Navigation:{}}" -->
<dmx-serverconnect id="eventos" url="/api/eventos/eventos_lista"></dmx-serverconnect>
<meta name="ac:route" content="/eventos_adm">

<div class="page-heading">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0">Eventos</h3>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalNovoEvento">
      <i class="fas fa-plus me-2"></i>Novo Evento
    </button>
  </div>

  <!-- Abas de navegação -->
  <ul class="nav nav-tabs mb-4">
    <li class="nav-item">
      <a class="nav-link active" href="#eventos-online">
        <i class="fas fa-globe me-2"></i>Eventos Online
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#rascunhos">
        <i class="fas fa-file me-2"></i>Rascunhos
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#finalizados">
        <i class="fas fa-check-circle me-2"></i>Finalizados
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#todos">
        <i class="fas fa-calendar me-2"></i>Todos os Eventos
      </a>
    </li>
  </ul>

  <!-- Campo de busca -->
  <div class="d-flex justify-content-end mb-4">
    <div class="input-group" style="max-width: 300px;">
      <input type="text" class="form-control" placeholder="Buscar evento...">
      <button class="btn btn-outline-secondary" type="button">
        <i class="fas fa-search"></i>
      </button>
    </div>
  </div>

  <!-- Tabela de Eventos -->
  <div class="card">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead>
            <tr>
              <th>Banner</th>
              <th>Nome do Evento</th>
              <th>Data e Horário</th>
              <th>Público</th>
              <th>Status</th>
              <th>Destaque</th>
              <th>Exibição</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <img src="/assets/images/eventos/rock.jpg" alt="Festival de Rock 2025" class="rounded" width="50" height="50">
              </td>
              <td>
                <div class="d-flex align-items-center">
                  Festival de Rock 2025
                  <i class="fas fa-mars text-primary ms-2"></i>
                </div>
              </td>
              <td>
                <div class="d-flex align-items-center">
                  <i class="far fa-calendar me-2"></i>
                  <span>25/03/2025</span>
                </div>
                <div class="d-flex align-items-center">
                  <i class="far fa-clock me-2"></i>
                  <span>19:00</span>
                </div>
              </td>
              <td>
                <div class="d-flex align-items-center">
                  <i class="fas fa-users me-2"></i>
                  <span>3 vendas</span>
                </div>
              </td>
              <td>
                <div class="form-check form-switch">
                  <input class="form-check-input" type="checkbox" checked>
                  <label class="form-check-label text-success">Ativo</label>
                </div>
              </td>
              <td>
                <div class="form-check form-switch">
                  <input class="form-check-input" type="checkbox" checked>
                  <label class="form-check-label">
                    <i class="fas fa-star text-warning"></i>
                  </label>
                </div>
              </td>
              <td>
                <div class="d-flex align-items-center">
                  <span class="me-2">8000</span>
                  <span class="badge bg-secondary">seg</span>
                </div>
              </td>
              <td>
                <button class="btn btn-link p-0">
                  <i class="fas fa-eye"></i>
                </button>
              </td>
            </tr>
            <tr>
              <td>
                <img src="/assets/images/eventos/oficina.jpg" alt="Levem o ASU na Oficina" class="rounded" width="50" height="50">
              </td>
              <td>
                <div class="d-flex align-items-center">
                  Levem o ASU na Oficina
                </div>
              </td>
              <td>
                <div class="d-flex align-items-center">
                  <i class="far fa-calendar me-2"></i>
                  <span>15/04/2025</span>
                </div>
                <div class="d-flex align-items-center">
                  <i class="far fa-clock me-2"></i>
                  <span>20:00</span>
                </div>
              </td>
              <td>
                <div class="d-flex align-items-center">
                  <i class="fas fa-users me-2"></i>
                  <span>0 vendas</span>
                </div>
              </td>
              <td>
                <div class="form-check form-switch">
                  <input class="form-check-input" type="checkbox" checked>
                  <label class="form-check-label text-success">Ativo</label>
                </div>
              </td>
              <td>
                <div class="form-check form-switch">
                  <input class="form-check-input" type="checkbox" checked>
                  <label class="form-check-label">
                    <i class="fas fa-star text-warning"></i>
                  </label>
                </div>
              </td>
              <td>
                <div class="d-flex align-items-center">
                  <span class="me-2">5000</span>
                  <span class="badge bg-secondary">seg</span>
                </div>
              </td>
              <td>
                <button class="btn btn-link p-0">
                  <i class="fas fa-eye"></i>
                </button>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Paginação -->
  <div class="d-flex justify-content-between align-items-center mt-4">
    <div class="text-muted">
      Mostrando 1-10 de 50 eventos
    </div>
    <nav>
      <ul class="pagination mb-0">
        <li class="page-item">
          <a class="page-link" href="#" aria-label="Anterior">
            <i class="fas fa-chevron-left"></i>
          </a>
        </li>
        <li class="page-item active"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
          <a class="page-link" href="#" aria-label="Próximo">
            <i class="fas fa-chevron-right"></i>
          </a>
        </li>
      </ul>
    </nav>
  </div>
</div>

<style>
  .nav-tabs {
    border-bottom: 1px solid #dee2e6;
  }

  .nav-tabs .nav-link {
    color: #596780;
    border: none;
    padding: 0.75rem 1rem;
    margin-right: 1rem;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .nav-tabs .nav-link:hover {
    color: #435ebe;
    border-bottom: 2px solid #435ebe;
  }

  .nav-tabs .nav-link.active {
    color: #435ebe;
    background: none;
    border-bottom: 2px solid #435ebe;
  }

  .table img {
    object-fit: cover;
  }

  .form-switch .form-check-input {
    width: 2.5em;
  }

  .form-check-input:checked {
    background-color: #20c997;
    border-color: #20c997;
  }

  .badge {
    font-weight: 500;
    padding: 0.35em 0.65em;
  }

  .btn-primary {
    background-color: #435ebe;
    border-color: #435ebe;
  }

  .btn-primary:hover {
    background-color: #364b96;
    border-color: #364b96;
  }

  .btn-link {
    color: #435ebe;
  }

  .btn-link:hover {
    color: #364b96;
  }

  .page-link {
    color: #435ebe;
    padding: 0.375rem 0.75rem;
  }

  .page-link:hover {
    color: #364b96;
  }

  .page-item.active .page-link {
    background-color: #435ebe;
    border-color: #435ebe;
  }

  .text-warning {
    color: #ffc107 !important;
  }

  .text-success {
    color: #20c997 !important;
  }
</style>