<!-- Wappler include head-page="layouts/main" fontawesome_5="cdn" is="dmx-app" id="login" appConnect="local" bootstrap5="custom" components="{dmxNotifications:{},dmxValidator:{}}" -->
<dmx-notifications id="notifies1"></dmx-notifications>
<meta name="ac:route" content="/login">

<head>
    <meta charset="utf-8" />
    <title>Login | Amazon</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description" />
    <meta content="Coderthemes" name="author" />

    <!-- App favicon -->
    <link rel="shortcut icon" href="assets/images/favicon.ico">

    <!-- Vendor css -->
    <link href="assets/css/vendor.min.css" rel="stylesheet" type="text/css" />

    <!-- App css -->
    <link href="assets/css/app.min.css" rel="stylesheet" type="text/css" id="app-style" />

    <!-- Icons css -->
    <link href="assets/css/icons.min.css" rel="stylesheet" type="text/css" />

    <!-- Theme Config Js -->
    <script src="assets/js/config.js"></script>
</head>

<body class="bg-light">
    <main class="mt-2 pt-2">
        <section class="d-flex align-items-center" style="min-height: 80vh;">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6 col-xl-5">
                        <div class="card shadow border-0 rounded-4 overflow-hidden hover-scale mb-3">
                            <div class="card-body p-4">
                                <div class="text-center mb-4">
                                    <a href="/" internal="true">
                                        <img src="assets/images/logo-dark.png" alt="" height="80" class="mb-3">
                                    </a>
                                    <h2 class="text-primary mb-3" style="font-family: 'Montserrat', sans-serif;">Login</h2>
                                </div>

                                <form is="dmx-serverconnect-form" id="sc_login" method="post" action="/api/usuarios/login" dmx-generator="bootstrap5" dmx-form-type="vertical" dmx-on:error="notifies1.danger('erro')" dmx-on:unauthorized="notifies1.warning('N찾o autorizado')" dmx-on:success="run({condition:{outputType:'boolean',if:`sc_login.data.permissao.permissao==1`,then:{steps:[{run:{outputType:'text',action:`browser1.goto(\'/\')`}},{run:{outputType:'text',action:`notifies1.success(sc_login.data.permissao.usuario_apelido+\', Bem-vindo(a)!\')`}}]},else:{steps:[{run:{outputType:'text',action:`browser1.goto(\'/admin/home\')`}},{run:{outputType:'text',action:`notifies1.success(sc_login.data.permissao.usuario_apelido+\', Bem-vindo(a)!\')`}}]}}})">
                                    <div class="form-group mb-3">
                                        <label for="inp_email" class="form-label">E-mail</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                            <input type="email" class="form-control rounded-end" id="inp_email" name="email" aria-describedby="inp_email_help" required="" data-msg-required="Preenchimento Obrigat처rio" data-rule-email="" placeholder="seu@email.com">
                                        </div>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="inp_senha" class="form-label">Senha</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                            <input type="password" class="form-control" id="inp_senha" name="senha" aria-describedby="inp_senha_help" required="" data-msg-required="Preenchimento Obrigat처rio">
                                            <span class="input-group-text" style="cursor: pointer;" onclick="togglePassword()">
                                                <i class="fas fa-eye text-muted"></i>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="form-group mb-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="true" id="inp_lembre-me" name="lembre_me">
                                            <label class="form-check-label" for="inp_lembre-me">Lembre me</label>
                                        </div>
                                    </div>
                                    <div class="form-group mb-3">
                                        <button type="submit" class="btn btn-primary w-100 rounded-3" dmx-bind:disabled="state.executing">
                                            <i class="fas fa-sign-in-alt me-2"></i>Entrar
                                            <span class="spinner-border spinner-border-sm" role="status" dmx-show="state.executing"></span>
                                        </button>
                                    </div>
                                </form>

                                <div class="text-center mt-4">
                                    <p class="text-muted mb-0">N찾o tem conta? <a href="/cadastro" class="text-primary fw-bold" internal="true">Cadastre-se</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- Vendor js -->
    <script src="assets/js/vendor.min.js"></script>

    <!-- App js -->
    <script src="assets/js/app.js"></script>

    <script>
        function togglePassword() {
            const senhaInput = document.getElementById('inp_senha');
            const eyeIcon = document.querySelector('.fa-eye');
            
            if (senhaInput.type === 'password') {
                senhaInput.type = 'text';
                eyeIcon.classList.remove('fa-eye');
                eyeIcon.classList.add('fa-eye-slash');
            } else {
                senhaInput.type = 'password';
                eyeIcon.classList.remove('fa-eye-slash');
                eyeIcon.classList.add('fa-eye');
            }
        }
    </script>
</body>