<!DOCTYPE html>
<html lang="pt-br" data-bs-theme="light">

<head>
  <script src="/dmxAppConnect/dmxAppConnect.js"></script>
  <base href="/">
  <meta charset="utf-8" />
  <title>Amazon | Painel Administrativo</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta content="Painel Administrativo" name="description">

  <!-- App favicon -->
  <link rel="shortcut icon" href="assets/images/favicon.ico">

  <!-- Vendor css -->
  <link href="/assets/css/vendor.min.css" rel="stylesheet" />

  <!-- App css -->
  <link href="/assets/css/app.min.css" rel="stylesheet" id="app-style" />

  <!-- Icons css -->
  <link href="assets/css/icons.min.css" rel="stylesheet" type="text/css" />
  <link href="assets/vendor/node-waves/waves.min.css" rel="stylesheet" type="text/css" />
  <link rel="stylesheet" href="/fontawesome5/css/all.min.css" />

  <!-- Wappler Components -->
  <script src="/dmxAppConnect/dmxBootstrap5Navigation/dmxBootstrap5Navigation.js" defer></script>
  <script src="/dmxAppConnect/dmxBrowser/dmxBrowser.js" defer></script>
  <script src="/dmxAppConnect/dmxFormatter/dmxFormatter.js" defer></script>
  <script src="/dmxAppConnect/dmxNotifications/dmxNotifications.js" defer></script>
  <link rel="stylesheet" href="/dmxAppConnect/dmxNotifications/dmxNotifications.css" />

  <style>
    /* Sidebar */
    .sidebar {
      width: 250px;
      position: fixed;
      left: 0;
      top: 0;
      bottom: 0;
      background: #f8f9fa;
      z-index: 1030;
      transition: all 0.3s ease;
      border-right: 1px solid #e5e9f2;
    }

    .sidebar-header {
      height: 60px;
      display: flex;
      align-items: center;
      padding: 0 1.5rem;
      border-bottom: 1px solid #e5e9f2;
    }

    .sidebar .nav-title {
      padding: 1.2rem 1.5rem 0.5rem;
      font-size: 0.75rem;
      text-transform: uppercase;
      color: #6c757d;
      font-weight: 600;
      letter-spacing: 0.5px;
    }

    .sidebar .nav-link {
      color: #2c3e50;
      padding: 0.8rem 1.5rem;
      display: flex;
      align-items: center;
      transition: all 0.3s ease;
      font-size: 0.9rem;
    }

    .sidebar .nav-link:hover,
    .sidebar .nav-link.active {
      color: #3498db;
      background: rgba(52, 152, 219, 0.1);
    }

    .sidebar .nav-link i {
      width: 24px;
      font-size: 1.1rem;
      margin-right: 0.8rem;
      text-align: center;
    }

    .sidebar .nav-link .badge {
      margin-left: auto;
      padding: 0.2rem 0.6rem;
      font-size: 0.75rem;
      font-weight: 500;
    }

    /* Main Content */
    .main-content {
      margin-left: 250px;
      padding: 1rem;
      transition: all 0.3s ease;
    }

    /* Header */
    .header {
      height: 60px;
      background: #fff;
      border-bottom: 1px solid #e5e9f2;
      position: fixed;
      top: 0;
      right: 0;
      left: 250px;
      z-index: 1020;
      transition: all 0.3s ease;
    }

    /* User Profile */
    .user-profile {
      display: flex;
      align-items: center;
      padding: 1rem 1.5rem;
      border-top: 1px solid #e5e9f2;
      margin-top: auto;
    }

    .user-profile img {
      width: 32px;
      height: 32px;
      border-radius: 50%;
      margin-right: 0.8rem;
    }

    .user-info {
      flex: 1;
    }

    .user-name {
      font-size: 0.9rem;
      font-weight: 500;
      margin: 0;
    }

    .user-role {
      font-size: 0.75rem;
      color: #6c757d;
      margin: 0;
    }

    /* Responsivo */
    @media (max-width: 991.98px) {
      .sidebar {
        margin-left: -250px;
      }

      .sidebar.show {
        margin-left: 0;
      }

      .main-content,
      .header {
        margin-left: 0;
        left: 0;
      }
    }

    /* Cards Dashboard */
    .card-stats {
      border: none;
      box-shadow: 0 0 35px 0 rgba(154, 161, 171, .15);
    }

    .card-stats .card-body {
      padding: 1.5rem;
    }

    .stat-icon {
      font-size: 1.5rem;
      width: 48px;
      height: 48px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
    }
  </style>
</head>

<body is="dmx-app" id="layoutadm">
  <dmx-notifications id="notifies1"></dmx-notifications>
  <dmx-serverconnect id="user" url="/api/usuarios/user"></dmx-serverconnect>
  <div is="dmx-browser" id="browser1"></div>

  <div class="wrapper">
    <!-- Sidebar -->
    <nav id="sidebar" class="sidebar">
      <div class="sidebar-header">
        <div class="user-info">
          <img class="user-avatar" src="{{user.data.user.foto||'assets/images/avatar.jpg'}}" alt="User Avatar">
          <div class="user-details">
            <h5>{{user.data.user.usuario_apelido}}</h5>
            <span>Admin</span>
          </div>
        </div>
      </div>

      <ul class="nav flex-column">
        <!-- GERAL -->
        <li class="nav-section">
          <span>GERAL</span>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/homepage" dmx-class:active="browser1.location.pathname == '/homepage'">
            <i class="fas fa-home"></i>
            <span>Dashboard</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="eventos_adm" dmx-class:active="browser1.location.pathname == 'eventos_adm'">
            <i class="fas fa-calendar"></i>
            <span>Eventos</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/estorno">
            <i class="fas fa-undo"></i>
            <span>Estorno</span>
            <span class="badge bg-danger">01</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/financeiro">
            <i class="fas fa-dollar-sign"></i>
            <span>Financeiro</span>
          </a>
        </li>

        <!-- USUÁRIOS -->
        <li class="nav-section">
          <span>USUÁRIOS</span>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/clientes">
            <i class="fas fa-users"></i>
            <span>Clientes</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/notificacoes">
            <i class="fas fa-bell"></i>
            <span>Notificações</span>
            <span class="badge bg-danger">12</span>
          </a>
        </li>

        <!-- CONFIGURAÇÕES -->
        <li class="nav-section">
          <span>CONFIGURAÇÕES</span>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/perfil">
            <i class="fas fa-user"></i>
            <span>Meu Perfil</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/" target="_blank">
            <i class="fas fa-globe"></i>
            <span>Ver Site</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#" dmx-on:click="logout.submit()">
            <i class="fas fa-sign-out-alt"></i>
            <span>Sair</span>
          </a>
        </li>
      </ul>
    </nav>

    <!-- Header -->
    <header class="header">
      <div class="d-flex align-items-center justify-content-between px-3 h-100">
        <button class="btn" type="button" onclick="document.getElementById('sidebar').classList.toggle('show')">
          <i class="fas fa-bars"></i>
        </button>
        <div class="d-flex align-items-center">
          <div class="dropdown me-3">
            <button class="btn position-relative" type="button">
              <i class="fas fa-bell"></i>
              <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">3</span>
            </button>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="main-content">
      <div class="container-fluid pt-4 mt-4">
        <div is="dmx-view" id="content">
          <%- await include(content, locals) %>
        </div>
      </div>
    </main>
  </div>

  <!-- Scripts -->
  <script src="/assets/js/vendor.min.js"></script>
  <script src="/assets/vendor/node-waves/waves.min.js"></script>
  <script src="/assets/js/app.js"></script>
</body>

</html>