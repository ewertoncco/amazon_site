  <!-- Icons css -->
  <link href="assets/css/icons.min.css" rel="stylesheet" type="text/css" />

  <!-- Fontawesome -->
  <link rel="stylesheet" href="/fontawesome5/css/all.min.css" />

  <!-- Perfect Scrollbar -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/perfect-scrollbar@1.5.5/css/perfect-scrollbar.min.css">

  <!-- Custom Mazer-like style -->
  <style>
    :root {
      --sidebar-width: 260px;
      --sidebar-width-sm: 75px;
      --primary-color: #435ebe;
      --heading-color: #25396f;
      --sidebar-bg: #f2f7ff;
      --sidebar-item-hover: #e0e7fd;
      --sidebar-item-active: #435ebe;
      --sidebar-item-active-color: #fff;
    }

    body {
      font-family: 'Nunito', sans-serif;
      background-color: #f5f7fc;
      font-size: 0.95rem;
    }

    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      height: 100%;
      width: var(--sidebar-width);
      background-color: var(--sidebar-bg);
      transition: all .3s ease;
      z-index: 10;
      overflow-y: auto;
      border-radius: 0 15px 15px 0;
    }

    .sidebar.active {
      width: var(--sidebar-width-sm);
    }

    .sidebar-header {
      height: 70px;
      display: flex;
      align-items: center;
      padding: 0 24px;
      margin-bottom: 10px;
    }

    .app-content {
      margin-left: var(--sidebar-width);
      padding: 2rem;
      transition: margin-left .3s ease;
      min-height: 100vh;
    }

    .sidebar.active+.app-content {
      margin-left: var(--sidebar-width-sm);
    }

    .menu-header {
      padding: 0 24px;
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      color: #999;
      font-weight: 600;
      margin: 10px 0;
    }

    .sidebar-item {
      list-style: none;
    }

    .sidebar-link {
      display: flex;
      align-items: center;
      padding: 10px 24px;
      color: #596780;
      transition: all .3s ease;
      text-decoration: none;
      border-radius: 8px;
      margin: 0 5px;
      font-size: 0.92rem;
    }

    .sidebar-link:hover {
      background-color: var(--sidebar-item-hover);
      color: var(--heading-color);
    }

    .sidebar-link i,
    .sidebar-link svg {
      width: 24px;
      margin-right: 12px;
      font-size: 1.1rem;
    }

    .sidebar-link.active {
      background-color: var(--sidebar-item-active);
      color: var(--sidebar-item-active-color);
    }

    .sidebar-title {
      font-weight: 600;
    }

    .card {
      border-radius: 15px;
      border: none;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.04);
      margin-bottom: 24px;
    }

    .card-header {
      background-color: transparent;
      border-bottom: 1px solid #e9ecef;
      padding: 1.5rem 1.5rem 1rem;
      font-weight: 700;
      color: var(--heading-color);
      font-size: 1.1rem;
    }

    .navbar {
      background-color: #fff;
      height: 70px;
      padding: 0 24px;
      margin-left: var(--sidebar-width);
      transition: margin-left .3s ease;
      z-index: 5;
      border-radius: 0 0 15px 15px;
    }

    .sidebar.active~.navbar {
      margin-left: var(--sidebar-width-sm);
    }

    .btn-primary {
      background-color: var(--primary-color);
      border-color: var(--primary-color);
      border-radius: 10px;
    }

    .page-title {
      font-size: 1.6rem;
      margin-bottom: 1.5rem;
      color: var(--heading-color);
      font-weight: 700;
    }

    .burger-btn {
      display: inline-block;
      cursor: pointer;
      padding: 10px 0;
    }

    .dropdown-menu.show {
      transform: translate(0, 62px) !important;
      border-radius: 12px;
    }

    .avatar {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      overflow: hidden;
    }

    .badge {
      border-radius: 12px;
      font-size: 0.75rem;
    }
  </style>
  <script src="/dmxAppConnect/dmxBootstrap5Navigation/dmxBootstrap5Navigation.js" defer></script>
</head>

<body>

  <div id="app">
    <!-- Sidebar Menu Start -->
    <div class="sidebar">
      <div class="sidebar-header">
        <a href="/adm">
          <img src="assets/images/logo-dark.png" alt="Logo" height="50">
        </a>
      </div>

      <div class="ps-3 mb-4">
        <div class="d-flex align-items-center">
          <div class="avatar me-3">
            <img src="assets/images/users/avatar-1.jpg" alt="Avatar">
          </div>
          <div>
            <h6 class="mb-0">Administrador</h6>
            <p class="mb-0 text-muted small">Admin</p>
          </div>
        </div>
      </div>

      <div class="menu-header">Geral</div>
      <ul class="menu">
        <li class="sidebar-item">
          <a href="/adm" class="sidebar-link active">
            <i class="fas fa-home"></i>
            <span class="sidebar-title">Dashboard</span>
          </a>
        </li>

        <li class="sidebar-item">
          <a href="/adm/eventos" class="sidebar-link">
            <i class="fas fa-calendar-days"></i>
            <span class="sidebar-title">Eventos</span>
          </a>
        </li>

        <li class="sidebar-item">
          <a href="/adm/estorno" class="sidebar-link">
            <i class="fas fa-life-ring"></i>
            <span class="sidebar-title">Estorno</span>
            <span class="badge bg-danger rounded-pill ms-auto">01</span>
          </a>
        </li>

        <li class="sidebar-item">
          <a href="/adm/financeiro" class="sidebar-link">
            <i class="fas fa-file-invoice"></i>
            <span class="sidebar-title">Financeiro</span>
          </a>
        </li>
      </ul>

      <div class="menu-header">Usuários</div>
      <ul class="menu">
        <li class="sidebar-item">
          <a href="/adm/clientes" class="sidebar-link">
            <i class="fas fa-users"></i>
            <span class="sidebar-title">Clientes</span>
          </a>
        </li>

        <li class="sidebar-item">
          <a href="/adm/notificacoes" class="sidebar-link">
            <i class="fas fa-bell"></i>
            <span class="sidebar-title">Notificações</span>
            <span class="badge bg-primary rounded-pill ms-auto">12</span>
          </a>
        </li>
      </ul>

      <div class="menu-header">Configurações</div>
      <ul class="menu">
        <li class="sidebar-item">
          <a href="/perfil" class="sidebar-link">
            <i class="fas fa-user-cog"></i>
            <span class="sidebar-title">Meu Perfil</span>
          </a>
        </li>

        <li class="sidebar-item">
          <a href="/site" class="sidebar-link">
            <i class="fas fa-globe"></i>
            <span class="sidebar-title">Ver Site</span>
          </a>
        </li>

        <li class="sidebar-item">
          <a href="/logout" class="sidebar-link">
            <i class="fas fa-sign-out-alt"></i>
            <span class="sidebar-title">Sair</span>
          </a>
        </li>
      </ul>
    </div>
    <!-- Sidebar Menu End -->

    <!-- Navbar -->

    <!-- Main Content -->
    <div class="app-content">
      <div class="main-content">
        <!-- Conteúdo da página será inserido aqui -->
        <%- await include(content, locals) %>
      </div>

      <!-- Footer Start -->
      <!-- end Footer -->
    </div>
  </div>

  <!-- Vendor js -->
  <script src="/assets/js/vendor.min.js"></script>

  <!-- Perfect Scrollbar -->
  <script src="https://cdn.jsdelivr.net/npm/perfect-scrollbar@1.5.5/dist/perfect-scrollbar.min.js"></script>

  <!-- Bootstrap JS Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

  <!-- App js -->
  <script src="assets/js/app.js"></script>

  <!-- Custom Mazer-like JS -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Toggle sidebar
      const toggleSidebar = document.getElementById('toggle-sidebar');
      const sidebar = document.querySelector('.sidebar');
      
      if (toggleSidebar) {
        toggleSidebar.addEventListener('click', function() {
          sidebar.classList.toggle('active');
        });
      }
      
      // Initialize Perfect Scrollbar
      const sidebarContainer = document.querySelector('.sidebar');
      if (sidebarContainer) {
        new PerfectScrollbar(sidebarContainer);
      }
      
      // Active menu item
      const currentLocation = location.pathname;
      const menuItems = document.querySelectorAll('.sidebar-link');
      menuItems.forEach(item => {
        if (currentLocation.includes(item.getAttribute('href'))) {
          item.classList.add('active');
        }
      });
    });
  </script>
</body>

</html>