    :root {
      --sidebar-width: 260px;
      --sidebar-width-sm: 75px;
      --primary-color: #4489e4;
      --heading-color: #25396f;
      --sidebar-bg: #f2f7ff;
      --sidebar-item-hover: #e0e7fd;
      --sidebar-item-active: #4489e4;
      --sidebar-item-active-color: #fff;
    }

    body {
      font-family: 'Nunito', sans-serif;
      background-color: #f5f7fc;
      font-size: 0.95rem;
    }

    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      height: 100%;
      width: var(--sidebar-width);
      background-color: var(--sidebar-bg);
      transition: all .3s ease;
      z-index: 10;
      overflow-y: auto;
      border-radius: 0 15px 15px 0;
    }

    .sidebar.active {
      width: var(--sidebar-width-sm);
    }

    .sidebar-header {
      height: 70px;
      display: flex;
      align-items: center;
      padding: 0 24px;
      margin-bottom: 10px;
    }

    .app-content {
      margin-left: var(--sidebar-width);
      padding: 2rem;
      transition: margin-left .3s ease;
      min-height: 100vh;
    }

    .sidebar.active+.app-content {
      margin-left: var(--sidebar-width-sm);
    }

    .menu-header {
      padding: 0 24px;
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      color: #999;
      font-weight: 600;
      margin: 10px 0;
    }

    .sidebar-item {
      list-style: none;
    }

    .sidebar-link {
      display: flex;
      align-items: center;
      padding: 10px 24px;
      color: #596780;
      transition: all .3s ease;
      text-decoration: none;
      border-radius: 8px;
      margin: 0 5px;
      font-size: 0.92rem;
    }

    .sidebar-link:hover {
      background-color: var(--sidebar-item-hover);
      color: var(--heading-color);
    }

    .sidebar-link i,
    .sidebar-link svg {
      width: 24px;
      margin-right: 12px;
      font-size: 1.1rem;
    }

    .sidebar-link.active {
      background-color: var(--sidebar-item-active);
      color: var(--sidebar-item-active-color);
    }

    .sidebar-title {
      font-weight: 600;
    }

    .card {
      border-radius: 15px;
      border: none;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.04);
      margin-bottom: 24px;
    }

    .card-header {
      background-color: transparent;
      border-bottom: 1px solid #e9ecef;
      padding: 1.5rem 1.5rem 1rem;
      font-weight: 700;
      color: var(--heading-color);
      font-size: 1.1rem;
    }

    .navbar {
      background-color: #fff;
      height: 70px;
      padding: 0 24px;
      margin-left: var(--sidebar-width);
      transition: margin-left .3s ease;
      z-index: 5;
      border-radius: 0 0 15px 15px;
    }

    .sidebar.active~.navbar {
      margin-left: var(--sidebar-width-sm);
    }

    .btn-primary {
      background-color: var(--primary-color);
      border-color: var(--primary-color);
      border-radius: 4px;
    }

    .btn {
      border-radius: 4px;
    }

    .page-title {
      font-size: 1.6rem;
      margin-bottom: 1.5rem;
      color: var(--heading-color);
      font-weight: 700;
    }

    .burger-btn {
      display: inline-block;
      cursor: pointer;
      padding: 10px 0;
    }

    .dropdown-menu.show {
      border-radius: 10px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .avatar {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      overflow: hidden;
    }

    .badge {
      border-radius: 12px;
      font-size: 0.75rem;
    }

    /* Preloader para SPA */
    .preloader {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 9999;
      display: flex;
      justify-content: center;
      align-items: center;
      background: rgba(255, 255, 255, 0.6);
      backdrop-filter: blur(2px);
      transition: all 0.3s ease;
    }

    .preloader.loaded {
      opacity: 0;
      visibility: hidden;
    }

    .preloader-content {
      text-align: center;
      background: rgba(255, 255, 255, 0.9);
      padding: 2rem;
      border-radius: 1rem;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .spinner {
      width: 40px;
      height: 40px;
      border: 3px solid #f3f3f3;
      border-top: 3px solid var(--primary-color);
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      0% {
        transform: rotate(0deg);
      }

      100% {
        transform: rotate(360deg);
      }
    }

    /* Efeito de blur no conteúdo enquanto carrega */
    .content-loading {
      filter: blur(1px);
      pointer-events: none;
    }

    /* Cores personalizadas para elementos específicos */
